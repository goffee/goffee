<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">Checks</li>
</ol>

<div class="checks-header">
  <h1>
    Checks
  </h1>
</div>

<p>
  <a class="btn btn-info" href="/checks/new" role="button">Add a new check</a>
</p>

{{{if .Checks }}}

{{{range .Checks}}}

  <div class="panel {{{if .Success}}} panel-success {{{else if lt .Status 100}}} panel-warning {{{else}}} panel-danger {{{end}}}">
    <div class="panel-heading">
      <h3 class="panel-title">
        <span class="badge">
          {{{if lt .Status 100}}}
            Error
          {{{else}}}
            {{{.Status}}}
          {{{end}}}
        </span>
        {{{.URL}}}
      </h3>
    </div>
    <div class="panel-body">
      <p>
        Last checked <time data-role="timeago" datetime="{{{formatTime .UpdatedAt}}}">{{{formatTime .UpdatedAt}}}</time>.&nbsp;
        <a class="" href="/checks/{{{.Id}}}" role="button">
          <span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span>
          View details
        </a>
      </p>
    </div>
  </div>

{{{end}}}

{{{end}}}
